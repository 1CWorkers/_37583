&НаКлиенте
Процедура ПроставитьПометкиРекурсивно(СтрокаДерева,ИмяПоля,Значение)
	ПодчиненныеСтроки = СтрокаДерева.ПолучитьЭлементы();
	Для Каждого Стрк Из ПодчиненныеСтроки Цикл
		Стрк[ИмяПоля]=Значение;
		Если Стрк.Группа = 0 Тогда
			ПроставитьПометкиРекурсивно(Стрк,ИмяПоля,Значение);
		Иначе 
			Стрк.Пометка =?(ИмяПоля = "Пометка",Значение,Истина );
		КонецЕсли;	
	КонецЦикла
КонецПроцедуры 


